{
  "expo": {
    "name": "TaskMaster",
    "slug": "TaskMaster",
    "version": "1.0.0",

    "web": {
      "favicon": "./assets/icon/favicon.png"
    },

    "experiments": {
      "tsconfigPaths": true
    },

    "plugins": [],

    "orientation": "portrait",
    "icon": "./assets/icon/icon.png",

    "userInterfaceStyle": "light",

    "splash": {
      "image": "./assets/icon/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#3206f1"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon/adaptive-icon.png",
        "backgroundColor": "#3206f1"
      }
    }
  }
}
